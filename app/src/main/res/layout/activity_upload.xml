<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/title" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toLeftOf="@+id/notification"
                    android:src="@drawable/search"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/coins"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/coins_bg"
                    android:backgroundTint="#77BFBFBF"
                    android:fontFamily="@font/medium"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:text="538"
                    android:textColor="@color/white"

                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="-15dp"
                    android:layout_toLeftOf="@+id/coins"
                    android:src="@drawable/ic_coins" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/record_dare_img" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="#50000000" />


                <RelativeLayout
                    android:id="@+id/playButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:src="@drawable/play_icon" />
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"

                android:layout_marginTop="15dp"
                android:fontFamily="@font/medium"
                android:gravity="end"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:text="Category"
                android:textColor="@color/white"

                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/categoriesLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/react_bg"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/spicyDaresBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="-6dp"
                    android:backgroundTint="#ff0000"
                    android:fontFamily="@font/heading_font"
                    android:text="Spicy Dares"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/socialDaresBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="-6dp"

                    android:layout_marginStart="5dp"
                    android:backgroundTint="#BDCC2B"
                    android:fontFamily="@font/heading_font"
                    android:text="Social Dares"

                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/wildcardDaresBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/heading_font"

                    android:textSize="8dp"
                    android:backgroundTint="#3C9AFB"
                    android:text="Wildcard Dares" />

                <Button
                    android:id="@+id/skillDaresBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/heading_font"

                    android:textSize="8dp"
                    android:backgroundTint="#F49586"
                    android:text="Skill Dares" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toLeftOf="@+id/notification"
                    android:src="@drawable/comment_icon"
                    app:tint="@android:color/white" />

                <EditText
                    android:id="@+id/keywordsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/black"
                    android:fontFamily="@font/medium"
                    android:hint="Add keywords to help others discover your daresâ€¦"
                    android:textColorHint="#C3BDBD"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_lyt"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ff0000"
            android:fontFamily="@font/regular"
            android:text="Upload"
            android:textColor="#ffffff" />


    </RelativeLayout>
</ScrollView>
